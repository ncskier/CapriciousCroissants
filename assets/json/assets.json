  "scenes": {
    "game": {
      "comment": "The scene graph definition for the game",
      "type": "Node",
      "format": {
        "type": "Anchored"
      },
      "children": {
        "labelend": {
          "type": "Label",
          "data": {
            "font": "script",
            "text": "",
            "foreground": [
              0,
              0,
              0,
              255
            ],
            "anchor": [
              0.5,
              0.5
            ],
            "halign": "center",
            "valign": "middle"
          },
          "layout": {
            "x_anchor": "fill",
            "y_anchor": "fill"
          }
        }
      }
    },
    "menu": {
      "comment": "The scene graph definition for the menu",
      "type": "Node",
      "format": {
        "type": "Anchored"
      },
      "children": { 
        "help": {
            "type" : "Button",
            "format" : {
                "type" : "Anchored"
            },
            "data" : {
                "anchor"   : [0.5,0.5],
                "up" : {
                    "type" : "Node",
                    "format" : {
                        "type" : "Anchored"
                    },
                    "data" : {
                        "comment"  : "Without this size, the up button fills the screen (because that is default)",
                        "size"     : [200, 200]
                    },
                    "comment"  : "The children fit snug to the up button and do not need sizes",
                    "children"  : {
                        "img" : {
                            "type" : "Image",
                            "data" : {
                                "texture" : "helpTexture",
                                "anchor"   : [0.5, 0.5]
                            },
                            "layout" : {
                                "x_anchor" : "fill",
                                "y_anchor" : "fill"
                            }
                        }
                    },
                    "layout" : {
                        "x_anchor" : "fill",
                        "y_anchor" : "fill"
                    }
                }
            },
            "layout" : {
                "x_anchor" : "left",
                "y_anchor" : "bottom",
                "x_offset" : 0.14,
                "y_offset" : 0.1
            }
        
        },
        "labelend": {
          "type": "Label",
          "data": {
            "font": "script",
            "text": "",
            "foreground": [
              0,
              0,
              0,
              255
            ],
            "anchor": [
              0.5,
              0.5
            ],
            "halign": "center",
            "valign": "middle"
          },
          "layout": {
            "x_anchor": "fill",
            "y_anchor": "fill"
          }
        }
      }
    },
    "tutorial" : {
      "comment": "The scene graph definition for the tutorial images",
      "type" : "Node",
      "format": {
        "type" : "Anchored"
      },
      "children" : {
        "trigger": {
            "type" : "Button",
            "format" : {
                "type" : "Anchored"
            },
            "data" : {
                "anchor"   : [0.5,0.5],
                "up" : {
                    "type" : "Node",
                    "format" : {
                        "type" : "Anchored"
                    },
                    "data" : {
                        "comment"  : "Without this size, the up button fills the screen (because that is default)"
